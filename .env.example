# Database (for local dev, these match docker-compose.yml defaults)
DATABASE_URL=jdbc:postgresql://localhost:5432/rentease
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# JWT Secret (generate a secure random string for production)
JWT_SECRET=myLocalDevSecretKeyThatIsAtLeast256BitsLongForHS256Algorithm

# Cloudinary (sign up at cloudinary.com for free)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Stripe (sign up at stripe.com, use test keys)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Email (use Gmail with app-specific password)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id

# Frontend URL
FRONTEND_URL=http://localhost:5173
